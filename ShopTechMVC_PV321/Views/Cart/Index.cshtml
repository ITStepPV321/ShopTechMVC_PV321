@{
}
@model List<Product>
<h2>Cart</h2>
@foreach (var product in Model)
{
    <p>@product.Title</p>
    <p>@product.Price</p>
    <a asp-controller="Cart" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
    <hr />
}
