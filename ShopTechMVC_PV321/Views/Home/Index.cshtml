@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    string productImagePlacholder = @"https://img.freepik.com/premium-vector/no-photo-available-vector-icon-default-image-symbol-picture-coming-soon-web-site-mobile-app_87543-18055.jpg";
}
<div class="text-start">
  @*   <h4>@ViewData["message"]</h4>
    <h5>@ViewBag.Users[1]</h5> *@
    @* <ol class="text-start"> *@
 @*    @foreach (string user in ViewBag.Users)
    {
        <li>@user</li>
        
    }
    </ol> *@

    @if (Context.Request.Cookies.ContainsKey("name"))
    {
        <p>@Context.Request.Cookies["name"]</p>
        <p>   @ViewBag.NameAuthor</p>
    }
    
     <h3>Products </h3>

     <div class="container">
            <div class="container text-center">
                <div class="row align-items-start">
                    <div class="col-3 text-start">
                        <ul class="nav flex-column">
                            @foreach (var category in ViewBag.Categories)
                            {
                                @if (ViewBag.NotActiveCategoryId==category.Id)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link disabled" asp-controller="Home" asp-action="Index" asp-route-category_id="@category.Id">@category.Name</a>
                                    </li>
                                }
                                else
                                {

                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Home" asp-action="Index" asp-route-category_id="@category.Id">@category.Name</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    @* start col 9 *@
                    <div class="col-9">

                      
                        <div class="row">
                            @if(Model.Any()){
                        @foreach(var product in Model) {
                            <div class="card" style="width: 18rem;">
                                <img src="@(product.ImagePath??productImagePlacholder)" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Title</h5>
                                    <p class="card-text">@product.Description</p>
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" asp-route-returnUri="@Context.Request.Path" class="btn btn-primary">Details</a>
                                    @* <p>@Context.Request.Path</p> *@
                                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id" class="btn btn-success">Add to Cart</a>
                                </div>
                            </div>
                                }
                            }
                            else
                            {
                                <h5 class="card-title"> Product not found ...</h5>
                            }
                        </div>
                    </div>
                    
                </div>
            </div>


     </div>
 </div>
